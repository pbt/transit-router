{
  "rules": {
    "quotemark": [true, "single", "jsx-single", "avoid-escape" ],
    "indent": [true, "spaces"],
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "triple-equals": true,
    "use-strict": [
      true,
      "check-module"
    ],
    "class-name": true,
    "no-unused-variable": true,
    // "no-require-imports": true,
    "semicolon": [true, "always"],
    "max-line-length": [true, 100],
    "eofline": true,
    "ordered-imports": [true, {"named-imports-order": "lowercase-first"}],
    "no-shadowed-variable": true,
    "variable-name": true,
    "comment-format": [true, "check-space"],
    "jsdoc-format": true,
    "label-position": true,
    "no-arg": true,
    "no-angle-bracket-type-assertion": true,
    "no-consecutive-blank-lines": true,
    "no-construct": true,
    "no-unused-expression": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
